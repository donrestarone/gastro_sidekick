<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Meal suggestions" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Meal suggestions</h1>
    <%= link_to "New meal suggestion", new_meal_suggestion_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%= link_to "Ingredients", ingredients_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <div id="meal_suggestions" class="min-w-full">
    <% @meal_suggestions.each do |meal_suggestion| %>
      <%= render meal_suggestion %>
      <p>
        <%= link_to "Show this meal suggestion", meal_suggestion, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
