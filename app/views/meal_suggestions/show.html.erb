<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @meal_suggestion %>
      <% if @similar_meal_suggestions.size > 0 %>
        <div>
          <strong>similar meal suggestions</strong>
          <% @similar_meal_suggestions.each do |result| %>
            <%= link_to result[:request_body], edit_meal_suggestion_path(MealSuggestion.find(result[:id])), class: "mt-2 rounded py-3 px-5 bg-gray-100 inline-block font-thin" %>  
          <% end %>
        </div>
      <% end %>

    <%= link_to "Edit this meal suggestion", edit_meal_suggestion_path(@meal_suggestion), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to meal suggestions", meal_suggestions_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this meal suggestion", @meal_suggestion, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
